@model List<Setting>
@{
    ViewData["Title"] = "Ustawienia";
}

<div class="col-12">
    <h2>Ustawienia</h2>

    <table class="table table-sm table-dark">
        <thead class="thead-light"><tr><th>Nazwa</th><th>Wartość</th><th>Akcje</th></tr></thead>
        <tbody>
            @if (Model.Count() == 0)
            {
                <tr><td colspan="3" class="text-center">Brak zdefiniowanych ustawień</td></tr>
            }
            else
            {
                foreach (var setting in Model)
                {
                <tr>
                        <td class="align-middle">@setting.Name</td>
                        <td class="align-middle value">@setting.Value</td>
                        <td class="align-middle">
                            <a asp-action="UpdateSetting" asp-route-settingid="@setting.SettingId" class="btn btn-sm btn-primary">Zmień</a>
                        </td>
                </tr>
                }
            }
        </tbody>
    </table>
</div>
