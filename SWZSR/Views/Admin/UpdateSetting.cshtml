@model Setting
@{
    ViewData["Title"] = "Edytuj ustawienie";
}

<div class="col-12">
    <h2>Edytuj ustawienie</h2>
    <form asp-action="UpdateSetting" method="post" style="margin: 0;">
        <input type="hidden" asp-for="SettingId" />
        <input type="hidden" asp-for="Key" />
        <input type="hidden" asp-for="Name" />
        <table class="table table table-dark">
            <thead class="thead-light"><tr><th>Klucz</th><th>Nazwa</th><th>Wartość</th><th>Akcje</th></tr></thead>
            <tbody>
                <tr>
                    <td class="align-middle">@Model.Key</td>
                    <td class="align-middle">@Model.Name</td>
                    <td class="align-middle"><input asp-for="Value" /></td>
                    <td class="align-middle"><button type="submit" class="btn btn-sm btn-primary">Zapisz</button></td>
                </tr>
            </tbody>
        </table>
    </form>
</div>

