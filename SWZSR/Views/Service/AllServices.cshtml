@model List<Service>
@{
    ViewData["Title"] = "Lista usług";
}

<div class="w-100"></div>
<div class="col-auto">
    <a class="btn btn-dark" asp-action="AddService">Dodaj usługę</a>
</div>
<div class="w-100"></div>

<div class="col-12">
    <h2>Lista usług</h2>

    <table class="table table-sm table-dark">
        <thead class="thead-light"><tr><th>Nazwa</th><th>Cena</th><th>Czas wykonania</th><th>Akcje</th></tr></thead>
        <tbody>
            @if (Model.Count() == 0)
            {
                <tr><td colspan="4" class="text-center">Brak zdefiniowanych usług</td></tr>
            }
            else
            {
                foreach (var service in Model)
                {
                    <tr>
                        <td class="align-middle">@service.Name</td>
                        <td class="align-middle">@service.Price</td>
                        <td class="align-middle">@service.EstimatedTime dni</td>
                        <td class="align-middle">
                            <form asp-action="DeleteService" asp-route-serviceid="@service.ServiceId" method="post" style="margin: 0;">
                                <a asp-action="EditService" asp-route-serviceid="@service.ServiceId" class="btn btn-sm btn-primary">Edytuj</a>
                                <button type="submit" class="btn btn-sm btn-danger">Usuń</button>
                            </form>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<div class="w-100"></div>
<div class="col-auto">
    <a class="btn btn-dark" asp-action="AddService">Dodaj usługę</a>
</div>
<div class="w-100"></div>